<%= form_for comment, data: { reflex: "submit->Comments#update", comment_id: comment.id } do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <strong><%= form.label "Add a comment:", { class: "form-label"} %></strong>
        <%= form.text_field :body, { class: "form-control" } %>
      </div>
      <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
